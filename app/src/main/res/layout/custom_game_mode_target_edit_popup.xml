<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fragment_dialog"
        android:paddingTop="25dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/tvDefaultMode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_4d2e2ee5_radius43"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/text_toggle_default_mode"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCloseFloating"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/tvDefaultMode"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_line_000000_w1_radius50"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/text_close_floating_window"
            android:textColor="@color/font1"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_xf_close" />
</LinearLayout>
